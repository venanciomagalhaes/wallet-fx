<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="655.0" prefWidth="1427.0" xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.gestorfinanceiro.presentation.controllers.MainController">
    <!-- Campos de entrada -->
    <Label layoutX="23.0" layoutY="46.0" text="Nome:"/>
    <TextField fx:id="nameField" layoutX="23.0" layoutY="64.0" prefHeight="26.0" prefWidth="318.0"/>

    <Label layoutX="411.0" layoutY="46.0" text="Valor:"/>
    <TextField fx:id="valueField" layoutX="411.0" layoutY="64.0" prefHeight="26.0" prefWidth="287.0"/>

    <Label layoutX="23.0" layoutY="108.0" text="Possui parcelamento?"/>
    <ChoiceBox fx:id="isInstallmentChoiceBox" layoutX="23.0" layoutY="129.0" prefHeight="26.0" prefWidth="317.0"/>

    <Label layoutX="411.0" layoutY="108.0" text="Quantidade Parcelas:"/>
    <TextField fx:id="remainingInstallments" layoutX="411.0" layoutY="129.0" prefHeight="26.0" prefWidth="287.0"/>

    <Label layoutX="23.0" layoutY="176.0" text="Data:"/>
    <DatePicker fx:id="dateValue" layoutX="23.0" layoutY="198.0" prefHeight="26.0" prefWidth="318.0"/>

    <Button layoutX="618.0" layoutY="198.0" mnemonicParsing="false" onAction="#createTransaction" text="ADICIONAR"/>

    <!-- Filtro de período -->
    <Label layoutX="28.0" layoutY="291.0" text="De:"/>
    <DatePicker fx:id="initialDate" layoutX="59.0" layoutY="287.0"/>
    <Label layoutX="277.0" layoutY="292.0" text="à"/>
    <DatePicker fx:id="finalDate" layoutX="315.0" layoutY="287.0"/>
    <Button fx:id="btnFilterTransactions" layoutX="523.0" layoutY="287.0" mnemonicParsing="false"
            onAction="#getTransactionsBetween" prefHeight="26.0" prefWidth="123.0" text="FILTRAR"/>

    <Separator layoutX="22.0" layoutY="246.0" prefHeight="0.0" prefWidth="766.0" AnchorPane.leftAnchor="0.0"
               AnchorPane.rightAnchor="0.0"/>

    <!-- GridPane para Receita, Gasto e Saldo -->
    <GridPane hgap="10.0" layoutX="800.0" layoutY="50.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints minWidth="120.0" prefWidth="180.0"/>
            <ColumnConstraints minWidth="120.0" prefWidth="180.0"/>
        </columnConstraints>

        <Label text="RECEITA:" GridPane.rowIndex="1"/>
        <TextField fx:id="totalInPeriodValue" disable="true" editable="false" prefWidth="174.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="0"/>

        <Label layoutX="818.0" prefWidth="250.0" text="GASTO TOTAL DO PERÍODO"/>
        <TextField fx:id="budgetValue" prefWidth="174.0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

        <Label prefWidth="250.0" text="SALDO FINAL:" GridPane.columnIndex="0" GridPane.rowIndex="2">
            <font>
                <Font name="System Bold" size="12.0"/>
            </font>
        </Label>
        <Label fx:id="finalAmountText" text="R$ XXXX.XX" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        </rowConstraints>
    </GridPane>

    <Separator layoutX="735.0" layoutY="-1.0" orientation="VERTICAL" prefHeight="247.0" prefWidth="6.0"
               AnchorPane.topAnchor="0.0"/>

    <!-- Tabela de transações -->
    <TableView fx:id="transactionsTable" layoutX="22.0" layoutY="337.0" prefHeight="290.0" prefWidth="1386.0">
        <columns>
            <TableColumn fx:id="columnId" prefWidth="60.0" text="ID"/>
            <TableColumn fx:id="columnDescription" prefWidth="224.0" text="DESCRIÇÃO"/>
            <TableColumn fx:id="columnValue" prefWidth="96.0" text="VALOR"/>
            <TableColumn fx:id="columnDate" prefWidth="124.0" text="DATA"/>
            <TableColumn fx:id="columnIsInstallment" prefWidth="198.0" text="É PARCELADO ?"/>
            <TableColumn fx:id="columnRemaningInstallment" prefWidth="183.0" text="PARCELAS RESTANTES"/>
            <TableColumn fx:id="columnActions" prefWidth="152.0" text="AÇÕES"/>
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>
    <Button fx:id="calculateAmount" layoutX="800.0" layoutY="172.0" mnemonicParsing="false"
            onAction="#calculateFinalAmount" prefHeight="25.0" prefWidth="370.0" text="CALCULAR"/>
    <Button fx:id="btnFilterClear" layoutX="674.0" layoutY="288.0" mnemonicParsing="false"
            onAction="#clearTransactionsDataTable" prefHeight="26.0" prefWidth="123.0" text="LIMPAR"/>
</AnchorPane>
